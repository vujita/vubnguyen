{
  "name": "vujita-ui",
  "version": "0.0.6-alpha.7",
  "license": "MIT",
  "homepage": "https://github.com/vujita/vubnguyen#readme",
  "main": "index.js",
  "module": "index.mjs",
  "types": "index.d.ts",
  "bugs": {
    "url": "https://github.com/vujita/vubnguyen/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vujita/vubnguyen"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "postcss.config.cjs",
    "tailwind.config.ts",
    "*.mjs",
    "*.js"
  ],
  "scripts": {
    "build:clean": "rimraf ./*.mjs ./*.js ./*.mts ./*.d.ts ./*.map",
    "build:tsup": "tsup",
    "build": "xrun -s build:clean build:tsup",
    "dev": "tsup --watch",
    "clean": "rimraf .turbo node_modules",
    "lint": "eslint .",
    "lint:fix": "pnpm lint --fix",
    "type-check": "tsc --noEmit",
    "test": "jest"
  },
  "dependencies": {
    "class-variance-authority": "0.7.0",
    "clsx": "2.0.0",
    "lucide-react": "0.276.0",
    "tailwind-merge": "1.14.0",
    "tailwindcss-animate": "1.0.7"
  },
  "devDependencies": {
    "@babel/core": "7.22.17",
    "@babel/preset-env": "7.22.10",
    "@babel/preset-typescript": "7.22.11",
    "@types/jest": "29.5.4",
    "@xarc/run": "1.1.1",
    "babel-jest": "29.6.4",
    "eslint": "8.45.0",
    "eslint-config-vujita": "0.0.6-alpha.7",
    "jest": "29.6.4",
    "jest-environment-jsdom": "29.6.4",
    "rimraf": "5.0.1",
    "tailwindcss": "3.3.2",
    "ts-node": "10.9.1",
    "tsup": "7.2.0",
    "typescript": "5.1.6"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "eslint-config-vujita/base"
    ],
    "overrides": [
      {
        "files": [
          "*.test.js",
          "*.test.jsx",
          "*.test.ts",
          "*.test.tsx"
        ],
        "rules": {
          "@typescript-eslint/no-unsafe-call": 1
        }
      }
    ]
  }
}
