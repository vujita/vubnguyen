{
  "name": "vujita-ui",
  "version": "0.0.6-alpha.7",
  "homepage": "https://github.com/vujita/vubnguyen#readme",
  "bugs": {
    "url": "https://github.com/vujita/vubnguyen/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vujita/vubnguyen"
  },
  "license": "MIT",
  "main": "index.js",
  "module": "index.mjs",
  "types": "index.d.ts",
  "files": [
    "postcss.config.cjs",
    "tailwind.config.ts",
    "*.mjs",
    "*.js"
  ],
  "scripts": {
    "build": "xrun -s build:clean build:tsup",
    "build:clean": "rimraf ./*.mjs ./*.js ./*.mts ./*.d.ts ./*.map storybook-static",
    "build:storybook": "storybook build",
    "build:tsup": "tsup",
    "clean": "rimraf .turbo node_modules",
    "dev": "xrun dev:tsup",
    "dev:storybook": "storybook dev -p 6006",
    "dev:tsup": "tsup --watch",
    "lint": "eslint .",
    "lint:fix": "pnpm lint --fix",
    "prepare": "xrun build:tsup",
    "storybook": "storybook dev -p 6006",
    "test": "jest",
    "type-check": "tsc --noEmit",
    "with-env": "dotenv -e ../../.env --"
  },
  "eslintConfig": {
    "extends": [
      "eslint-config-vujita/base",
      "eslint-config-vujita/react",
      "plugin:storybook/recommended"
    ],
    "overrides": [
      {
        "files": [
          "*.test.js",
          "*.test.jsx",
          "*.test.ts",
          "*.test.tsx"
        ],
        "rules": {
          "@typescript-eslint/no-unsafe-call": 1
        }
      },
      {
        "files": [
          "*.stories.ts",
          "*.stories.tsx"
        ],
        "rules": {
          "@typescript-eslint/await-thenable": "off"
        }
      }
    ],
    "root": true
  },
  "dependencies": {
    "class-variance-authority": "0.7.0",
    "clsx": "2.0.0",
    "lucide-react": "0.276.0",
    "tailwind-merge": "1.14.0",
    "tailwindcss-animate": "1.0.7"
  },
  "devDependencies": {
    "@babel/core": "7.22.17",
    "@babel/preset-env": "7.22.10",
    "@babel/preset-react": "7.22.5",
    "@babel/preset-typescript": "7.22.11",
    "@storybook/addon-essentials": "^7.6.7",
    "@storybook/addon-interactions": "^7.6.7",
    "@storybook/addon-links": "^7.6.7",
    "@storybook/addon-onboarding": "^1.0.10",
    "@storybook/blocks": "^7.6.7",
    "@storybook/react": "^7.6.7",
    "@storybook/react-webpack5": "^7.6.7",
    "@storybook/test": "^7.6.7",
    "@types/jest": "29.5.4",
    "@xarc/run": "1.1.1",
    "babel-jest": "29.6.4",
    "chromatic": "7.0.0",
    "dotenv": "16.3.2",
    "eslint": "8.45.0",
    "eslint-config-vujita": "0.0.6-alpha.7",
    "eslint-plugin-storybook": "0.6.13",
    "jest": "29.6.4",
    "jest-environment-jsdom": "29.6.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "rimraf": "5.0.1",
    "storybook": "7.3.2",
    "tailwindcss": "3.3.2",
    "ts-node": "10.9.1",
    "tsup": "7.2.0",
    "typescript": "5.1.6"
  },
  "peerDependencies": {
    "react": "*",
    "react-dom": "*"
  },
  "publishConfig": {
    "access": "public"
  }
}
