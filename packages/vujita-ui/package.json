{
  "name": "vujita-ui",
  "version": "0.0.6-alpha.7",
  "homepage": "https://github.com/vujita/vubnguyen#readme",
  "bugs": {
    "url": "https://github.com/vujita/vubnguyen/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vujita/vubnguyen"
  },
  "license": "MIT",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./avatar": {
      "import": "./dist/avatar.mjs",
      "require": "./dist/avatar.js"
    },
    "./classnames": {
      "import": "./dist/classnames.mjs",
      "require": "./dist/classnames.js"
    },
    "./skeleton": {
      "import": "./dist/skeleton.mjs",
      "require": "./dist/skeleton.js"
    },
    "./tailwind.preset": "./src/tailwind.preset.ts",
    "./type-helpers": {
      "import": "./dist/type-helpers.mjs",
      "require": "./dist/type-helpers.js"
    },
    "./package.json": "./package.json",
    "./src/index.css": "./src/index.css",
    "./postcss.config.cjs": "./postcss.config.cjs"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "postcss.config.cjs",
    "tailwind.config.ts",
    "dist",
    "src"
  ],
  "scripts": {
    "build": "xrun -s build:clean build:lib",
    "clean:modules": "(.*)",
    "dev": "xrun build:watch",
    "lint": "eslint .",
    "lint:fix": "pnpm lint --fix",
    "prepare": "xrun -s build:clean build:lib",
    "test": "jest",
    "type-check": "tsc --noEmit",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "class-variance-authority": "catalog:",
    "clsx": "catalog:",
    "lucide-react": "catalog:",
    "tailwind-merge": "catalog:",
    "tailwindcss-animate": "catalog:"
  },
  "devDependencies": {
    "@babel/core": "catalog:",
    "@babel/preset-env": "catalog:",
    "@babel/preset-react": "catalog:",
    "@babel/preset-typescript": "catalog:",
    "@types/jest": "catalog:",
    "@types/node": "catalog:",
    "@xarc/run": "catalog:",
    "babel-jest": "catalog:",
    "dotenv": "catalog:",
    "eslint": "catalog:",
    "eslint-config-vujita": "workspace:*",
    "jest": "catalog:",
    "jest-environment-jsdom": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:",
    "rimraf": "catalog:",
    "tailwindcss": "catalog:",
    "ts-node": "catalog:",
    "tsdown": "catalog:",
    "typescript": "catalog:"
  },
  "peerDependencies": {
    "react": "*",
    "react-dom": "*"
  },
  "publishConfig": {
    "access": "public"
  }
}
