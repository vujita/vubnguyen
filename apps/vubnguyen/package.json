{
  "name": "@vujita/vubnguyen",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "xrun vubnguyen/build",
    "clean:modules": "(.*)",
    "dev": "pnpm with-env next dev",
    "dev:preview": "pnpm with-env next start",
    "e2e": "rimraf playwright-report && pnpm with-env playwright test",
    "eslint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "eslint:fix": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --fix",
    "lint": "xrun -s next:lint eslint",
    "lint:fix": "xrun -s next:lint:fix eslint:fix",
    "next:lint": "dotenv -v SKIP_ENV_VALIDATION=1 next lint",
    "next:lint:fix": "dotenv -v SKIP_ENV_VALIDATION=1 next lint --fix",
    "start": "pnpm with-env next start",
    "type-check": "tsc --noEmit",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@fortawesome/free-solid-svg-icons": "catalog:",
    "@fortawesome/react-fontawesome": "catalog:",
    "@t3-oss/env-nextjs": "catalog:",
    "@tanstack/react-query": "catalog:",
    "@tanstack/react-query-devtools": "catalog:",
    "@tanstack/react-query-next-experimental": "catalog:",
    "@trpc/client": "catalog:",
    "@trpc/next": "catalog:",
    "@trpc/react-query": "catalog:",
    "@trpc/server": "catalog:",
    "@vujita/api": "workspace:*",
    "@vujita/auth": "workspace:*",
    "@vujita/db": "workspace:*",
    "framer-motion": "catalog:",
    "lucide-react": "catalog:",
    "next": "catalog:",
    "next-auth": "catalog:",
    "next-themes": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:",
    "superjson": "catalog:",
    "vujita-ui": "workspace:*",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "catalog:",
    "@playwright/test": "catalog:",
    "@types/node": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@xarc/run": "catalog:",
    "autoprefixer": "catalog:",
    "dotenv-cli": "catalog:",
    "eslint": "catalog:",
    "eslint-config-vujita": "workspace:*",
    "postcss": "catalog:",
    "rimraf": "catalog:",
    "tailwindcss": "catalog:",
    "typescript": "catalog:"
  }
}
