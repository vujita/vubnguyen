{
  "name": "@vujita/storybook",
  "version": "0.1.0",
  "private": true,
  "description": "storybook app",
  "scripts": {
    "clean": "git clean -xdf .next .turbo node_modules",
    "deploy:chromatic": "xrun -s build chromatic",
    "chromatic": "pnpm with-env chromatic --project-token=$CHROMATIC_PROJECT_TOKEN",
    "dev": "xrun dev:tailwind dev:storybook",
    "dev:tailwind": "tailwindcss -i ./src/tailwind.css -o ./src/tailwind.generated.css --watch",
    "dev:storybook": "storybook dev -p 6006",
    "build": "xrun -s build:clean build-storybook",
    "build:tailwind": "tailwindcss -i ./src/tailwind.css -o ./src/tailwind.generated.css",
    "build:clean": "rimraf storybook-static",
    "build:storybook": "storybook build",
    "copy:verceljson": "cp vercel.json storybook-static/vercel.json",
    "build-storybook": "xrun -s build:storybook copy:verceljson",
    "with-env": "dotenv -e ../../.env --"
  },
  "author": "Vu Nguyen",
  "license": "ISC",
  "devDependencies": {
    "@babel/preset-env": "7.22.10",
    "@babel/preset-react": "7.22.5",
    "@babel/preset-typescript": "7.22.11",
    "@storybook/addon-essentials": "7.3.2",
    "@storybook/addon-interactions": "7.3.2",
    "@storybook/addon-links": "7.3.2",
    "@storybook/addon-onboarding": "1.0.8",
    "@storybook/blocks": "7.3.2",
    "@storybook/react": "7.3.2",
    "@storybook/react-webpack5": "7.3.2",
    "@storybook/testing-library": "0.2.0",
    "@xarc/run": "1.1.1",
    "chromatic": "7.0.0",
    "dotenv": "16.3.1",
    "eslint": "8.45.0",
    "eslint-config-vujita": "0.0.6-alpha.7",
    "eslint-plugin-storybook": "0.6.13",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "rimraf": "5.0.1",
    "storybook": "7.3.2",
    "tailwindcss": "3.3.2",
    "tsup": "7.2.0",
    "typescript": "5.1.6",
    "vujita-ui": "0.0.6-alpha.7"
  },
  "eslintConfig": {
    "extends": [
      "eslint-config-vujita/base",
      "plugin:storybook/recommended"
    ],
    "overrides": [
      {
        "files": [
          "*.stories.ts",
          "*.stories.tsx"
        ],
        "rules": {
          "@typescript-eslint/await-thenable": "off"
        }
      }
    ]
  }
}
